{
  "name": "authentication-backend",
  "version": "1.3.0",
  "description": "minimal API for integration with external authentication providers",
  "files": [
    "build/**/*"
  ],
  "main": "build/index.mjs",
  "types": "build/index.d.ts",
  "scripts": {
    "build": "rm -r build || true; rollup --config rollup.config.mjs && rm -r build/types",
    "start": "npm run build && node example/main.mjs",
    "format": "prettier --write .",
    "test": "tsc && prettier --check . && lean-test --preprocess=tsc --parallel"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/davidje13/auth-backend.git"
  },
  "keywords": [
    "oauth"
  ],
  "author": "David Evans",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/davidje13/auth-backend/issues"
  },
  "homepage": "https://github.com/davidje13/auth-backend#readme",
  "dependencies": {
    "jwt-simple": "^0.5.6"
  },
  "devDependencies": {
    "@rollup/plugin-terser": "0.4.x",
    "@rollup/plugin-typescript": "12.x",
    "@types/node": "24.x",
    "@types/supertest": "6.x",
    "lean-test": "2.x",
    "prettier": "3.6.2",
    "rollup": "4.x",
    "rollup-plugin-dts": "6.x",
    "supertest": "7.x",
    "typescript": "5.9.x",
    "web-listener": "0.11.0"
  }
}
